<Window x:Class="FlickrSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlickrSearch"
        mc:Ignorable="d"
        Title="FlickrSearch" Height="450" Width="450" >

    <Grid>
        <ScrollViewer>
            <StackPanel Name="spMainStackPanel">
                <StackPanel Orientation="Horizontal">
                    <Button Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnSearch_Click" />
                    <TextBox Name="txtSearch" HorizontalAlignment="Left" Height="23" Margin="104,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                </StackPanel>
                <StackPanel Name="spResult">
                    
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
